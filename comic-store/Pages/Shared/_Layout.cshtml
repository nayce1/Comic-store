<!DOCTYPE html>
<html lang="en">



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SLD521</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SLD521.styles.css" asp-append-version="true" />
</head>

<style>
    
    .container {
        text-align: center;
        margin-top: 50px;
        hover-effect:hover;

    }

    h1 {
        color: #007BFF;
    }

    .cool-features {
        margin-top: 30px;
    }

    .call-to-action {
        margin-top: 30px;
    }

    .btn-primary {
        background-color: #007BFF;
        color: white;
        .hover-effect:hover
  

    }

    footer {
        background-color: rgba(0, 0, 0, 0.5); /* Transparent black background */
        color: #fff; /* Text color */
        
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 50%;
        max-height: 0%;
    }

    ::-webkit-scrollbar {
        width: 10px; /* Set the width of the scrollbar */
    }

    ::-webkit-scrollbar-thumb {
        background-color: #007BFF; /* Color of the scrollbar thumb */
        border-radius: 5px; /* Rounded corners for the thumb */
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #0056b3; /* Color on hover */
        }

    ::-webkit-scrollbar-track {
        background-color: #f0f0f0; /* Color of the scrollbar track */
        
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">SLD521</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
             
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/location">location</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/favourites">favourites</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/About us">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Latest news">latests news</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SLD521 - Unathi_Mamakoko - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>