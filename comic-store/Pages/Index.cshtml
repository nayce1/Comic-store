@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
 h1 {
        text-align: center;
        font-size: 24px;
        color: #333;
    }

    /* Style for each item */
    .item {
        margin: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* Style for the buttons */
    button {
        padding: 5px 10px;
        background-color: #007BFF;
        color: white;
        border: none;
        cursor: pointer;
    }

    /* Style for the list of favorite items */
    h2 {
        margin-top: 20px;
        font-size: 18px;
        color: #333;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    li {
        margin: 5px 0;
        font-size: 16px;
        color: #007BFF;
    }

        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #007BFF;
            color: white;
            text-align: center;
            padding: 20px 0;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        ::-webkit-scrollbar {
            width: 10px; /* Set the width of the scrollbar */
        }

        ::-webkit-scrollbar-thumb {
            background-color: #007BFF; /* Color of the scrollbar thumb */
            border-radius: 5px; /* Rounded corners for the thumb */
        }

            ::-webkit-scrollbar-thumb:hover {
                background-color: #0056b3; /* Color on hover */
            }

        ::-webkit-scrollbar-track {
            background-color: #f0f0f0; /* Color of the scrollbar track */
        }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome to comic store</h1>
    <p>A place of comic books.</p>
    <img src="~/css/dope-anime-red-hair-shanks-bnwzeg6nu57s8i5a.jpg" alt="Item 1 Image" width="600" >
</div>
